{% extends 'base.html.twig' %}

{% block body %}
    <h1>Site_escale</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site_Escale.id }}</td>
            </tr>
            <tr>
                <th>Dateescale</th>
                <td>{% if site_Escale.dateEscale %}{{ site_Escale.dateEscale|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ site_Escale.motif }}</td>
            </tr>
            <tr>
                <th>Datedepart</th>
                <td>{% if site_Escale.dateDepart %}{{ site_Escale.dateDepart|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ site_Escale.code }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ site_Escale.ville }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ site_Escale.statut }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if site_Escale.createdAt %}{{ site_Escale.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if site_Escale.updatedAt %}{{ site_Escale.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ site_Escale.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('escales_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('escales_edit', { 'id': site_Escale.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
